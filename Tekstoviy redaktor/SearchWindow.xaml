        <Button x:Name="CancelButton" Content="Отмена" Margin="0,38,19,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="CancelButton_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="56"/>
