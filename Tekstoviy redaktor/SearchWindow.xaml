        <Label x:Name="matches" Content="Совпадение:" HorizontalAlignment="Left" Margin="179,38,0,0" VerticalAlignment="Top" Height="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0"/>
